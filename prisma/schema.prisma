generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  description   String?
  phone         String
  cnpj          String   @unique
  email         String   @unique
  address       String
  password_hash String
  created_at    DateTime @default(now())
  name          String
  pets          Pet[]

  @@map("orgs")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  name          String
  pets          Pet[]

  @@map("users")
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  age         Int
  race        String
  observation String?
  created_at  DateTime @default(now())
  orgId       String
  userId      String?
  category    String
  org         Org      @relation(fields: [orgId], references: [id])
  user        User?    @relation(fields: [userId], references: [id])

  @@map("pets")
}
